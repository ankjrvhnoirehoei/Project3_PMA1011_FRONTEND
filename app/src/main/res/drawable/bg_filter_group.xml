<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Màu xám khi nhấn -->
            <corners android:radius="12dp"/> <!-- Bo góc -->
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- Màu xanh khi chọn -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu trắng mặc định -->
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Viền xám -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
