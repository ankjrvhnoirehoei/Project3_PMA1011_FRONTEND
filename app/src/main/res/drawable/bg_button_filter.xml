<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0"/>  <!-- Màu xám khi bấm -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>  <!-- Màu trắng -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#BDBDBD"/>  <!-- Viền xám -->
        </shape>
    </item>
</selector>
