<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:layout_margin="8dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Layout chứa thông tin đơn hàng bên trái -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Tên điện thoại -->
            <TextView
                android:id="@+id/txt_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iPhone 15 Pro Max"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Trạng thái đơn hàng -->
            <TextView
                android:id="@+id/txt_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang vận chuyển"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_dark" />

            <!-- Ngày mua hàng -->
            <TextView
                android:id="@+id/txt_purchase_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày mua: 05/02/2025"
                android:textSize="16sp" />

            <!-- Số lượng mua -->
            <TextView
                android:id="@+id/txt_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: 2"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Layout chứa 2 nút bên phải -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Nút Xác Nhận Đơn Hàng -->
            <Button
                android:id="@+id/btn_confirm_order"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:text="Xác nhận"
                android:textSize="16sp"
                android:backgroundTint="@color/gold"
                android:textColor="@android:color/white" />

            <!-- Nút Hủy Đơn Hàng -->
            <Button
                android:id="@+id/btn_cancel_order"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:text="Hủy"
                android:textSize="16sp"
                android:backgroundTint="@color/brown"
                android:textColor="@android:color/white"
                android:layout_marginTop="6dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
