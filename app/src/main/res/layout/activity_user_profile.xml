<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Nút trở lại nằm góc trên bên trái -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:text="Trở lại"
        android:textColor="#000000"
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="0dp" />

    <!-- Hình ảnh profile -->
    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/profile"
        android:layout_gravity="center"
        android:contentDescription="Hình ảnh cá nhân"
        android:scaleType="centerCrop" />

    <!-- Tên đầy đủ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/fullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Họ và Tên: Nguyễn Văn A"
            android:textSize="18sp"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/editFullName"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/pen"
            android:contentDescription="Sửa tên" />
    </LinearLayout>

    <!-- Số điện thoại -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số điện thoại: 0123456789"
            android:textSize="18sp"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/editPhoneNumber"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/pen"
            android:contentDescription="Sửa số điện thoại" />
    </LinearLayout>

    <!-- Địa chỉ nhà -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Địa chỉ: 123 Đường ABC, Phường XYZ, TP. HCM"
            android:textSize="18sp"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/editAddress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/pen"
            android:contentDescription="Sửa địa chỉ" />
    </LinearLayout>

    <!-- Trạng thái VIP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/vipStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trạng thái: Khách hàng VIP"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>
