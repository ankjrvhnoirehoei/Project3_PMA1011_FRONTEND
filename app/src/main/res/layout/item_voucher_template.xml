<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#000000"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:backgroundTintMode="src_over"
    android:backgroundTint="#FFFFFF"
    android:gravity="center_vertical">

    <!-- Khung xanh lá: Số thứ tự -->
    <TextView
        android:id="@+id/tvSerialNumber"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="1"
        android:padding="4dp" />

    <!-- Khung bao tổng thể nội dung voucher -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/white"
        android:backgroundTintMode="src_over"
        android:layout_marginStart="8dp"
        android:backgroundTint="#F0F0F0"
        android:elevation="1dp">

        <!-- Khung đỏ: Thông tin Voucher -->
        <TextView
            android:id="@+id/tvVoucherInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:padding="8dp"
            android:text="Voucher Giảm Giá 20%"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Khung vàng: Số tiền giảm -->
        <TextView
            android:id="@+id/tvDiscountAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:padding="8dp"
            android:text="Giảm 50.000đ"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>